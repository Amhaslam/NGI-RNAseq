process {
  executor = 'local'
  cpus = 2
  memory = 8.GB
  time = 2.h

  errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
  maxRetries = 1
  maxErrors = '-1'

  // Environment modules and resource requirements
  $makeSTARindex {
      cpus = 10
      memory = 60.GB
      time = 5.h
  }
  $makeHISATindex {
    cpus = 10
    memory = 30.GB
    time = 5.h
  }
  $fastqc {
    memory = 4.GB
    time = 8.h
  }
  $trim_galore{
    memory = 2.GB
    time = 8.h
  }
  $star {
    cpus = 10
    memory = 60.GB
    time = 8.h
  }
  $hisat2Align {
    cpus = 8
    memory = 30.GB
    time = 8.h
  }
  $hisat2_sortOutput {
    cpus = 4
    memory = 30.GB
    time = 8.h
  }
  $rseqc {
    cpus = 8
    memory = 30.GB
    time = 7.h
  }
  $featureCounts {
    memory = 2.GB
  }
  $stringtieFPKM {
    memory = 2.GB
  }
  $dupradar {
    memory = 4.GB
  }
  $sample_correlation {
    memory = 16.GB
  }
}
